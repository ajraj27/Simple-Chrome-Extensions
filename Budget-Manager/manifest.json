{
    "manifest_version":2,
    "name":"Budget Manager",
    "version":"1.0",
    "description":"Its a budget manager.",
    "browser_action":{
        "default_popup":"popup.html"
    },
    "icons":{
        "128":"128.png",
        "48":"48.png",
        "16":"16.png"
    },
    "options_page":"options.html",

    "background":{
        "scripts":["eventPage.js"],
        "persistent":false
    },

    "permissions":[
        "storage",
        "notifications",
        "contextMenus"
    ]
}